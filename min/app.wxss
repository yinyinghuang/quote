/**app.wxss**/
button{
  position:relative;
  display:block;
  margin:0;
  padding:0;
  box-sizing:border-box;
  text-align:center;
  text-decoration:none;
  line-height: 1;
  border-radius: 0;
}
button::after{
  border: none;
}
page {
    width: 100%;
    height: 100%;
    font-size: 22rpx;
    color: #333;
    background-color: #ededed;
    box-sizing: border-box;
}
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  padding-bottom: 20rpx; 
}
.section{
  width: 92%;
  margin: auto;
  margin-bottom: 40rpx;
}

/* 搜索框 */
.section-search{
  border: 1px #fff solid;
  background: #fff;
  box-shadow:  3rpx 3rpx 5rpx #000;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  box-sizing:border-box;
}
.search-image,
.search-text{
  display: inline;
  margin-right: 20rpx;
  color: #adadad
}
.search-image image{
  width: 1.4em;
  height: 1.4em;
  vertical-align: middle;
}


/* 产品列表 */
.product-item{
  width: 100%;
  height: 196rpx;
  margin-bottom: 15rpx;
  justify-content: flex-start;
  background: #fff;
}
.product-icon image{
  width: 136rpx;
  height: 136rpx;
  margin: 30rpx;
}
.product-info{
  text-align: left;
  height: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.product-info .product-item-text{
  font-size: 1.2em;
  line-height: 1.2em;
  margin-bottom: 10rpx;
  max-height: 2.4em;
  overflow: hidden
}
.product-info .product-item-price{
  color: #ff7878;
  font-size: 1.2em;
  font-weight: 900;
  line-height: 1.2em;
  margin-bottom: 14rpx;
}
.product-info .product-item-price .product-price-label{
  margin-left: 20rpx;
  color: #333;
  border: 1px solid #333;
}

