/**app.wxss**/
page {
    width: 100%;
    height: 100%;
    font-size: 20rpx;
    color: #333;
    background-color: #ededed;
    box-sizing: border-box;
}
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.section{
  width: 92%;
  margin: auto;
  margin-bottom: 40rpx;
}

/* 搜索框 */
.section-search{
  border: 1px #fff solid;
  background: #fff;
  box-shadow:  3rpx 3rpx 5rpx #000;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  box-sizing:border-box;
}
.search-image,
.search-text{
  display: inline;
  margin-right: 20rpx;
  color: #adadad
}
.search-image image{
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}


/* 最近更新 */
.product-list-last  .product-item{
  width: 100%;
  height: 196rpx;
  margin-bottom: 15rpx;
  justify-content: flex-start;
  background: #fff;
}
.product-list-last .product-icon image{
  width: 136rpx;
  height: 136rpx;
  margin: 30rpx;
}
.product-info{
  text-align: left;
  line-height: 30rpx;
  height: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.product-info .product-item-text{
  font-size: 1.2em;
  line-height: 30rpx;
  margin-bottom: 10rpx;
  max-height: 60rpx;
  overflow: hidden
}
.product-info .product-item-price{
  color: #ff7878;
  font-weight: 600;
  line-height: 30rpx;
  margin-bottom: 14rpx;
}
.product-info .product-item-price .product-price-label{
  margin-left: 20rpx;
  color: #333;
  border: 1px solid #333;
}

