/* pages/Home/product_list/product_list.wxss */
.product-list-bread{
  font-size: 1.4em;
  color: #a2a2a2;
  border-bottom: 1px solid #d2d2d2;
  padding-bottom: 8rpx;
}
.product-list-bread .active{
  color: #333;
}
.product-list-bread .split{
  padding: 0 16rpx;
}
.product-list-filter{
  font-size: 1.4em;
  color: #a2a2a2;
  padding: 40rpx 0; 
  line-height: 48rpx;
  text-align: center;
}
.product-list-filter-option{
  width: 25%;
  border-right: #d2d2d2 1px solid;
}
.product-list-filter-option:last-child{
  border-right:none;
}
.product-list-filter-option.active{
  background: #ff7878;
  color: #fff;
}