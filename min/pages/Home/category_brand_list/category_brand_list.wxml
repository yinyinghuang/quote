<!--pages/Home/catogery_brand_list/category_brand_list.wxml-->
<view class='container'>
  <view class='section section-option' wx:if='{{option.length}}'>
    <text class='section-title'>
      <text>筛选</text>
      <text class='split'>></text>
      <text>品牌</text>
    </text>
    <view>
    </view>
    <view class='option-list'>
      <view wx:for="{{brand}}" wx:key="id" data-index='{{index}}' bindtap='handlerSelect' class='option-item'>
          <view class='option-item-name {{item.selected?"active":""}}'>{{item.name}}</view>
      </view>
    </view>
    <view class='option-confirm' bindtap='handlerNavigatorToCateFilter'>
      确认
    </view>
  </view>
  <view class='section section-official-account'>
    <official-account></official-account>
  </view>
</view>

