<!--pages/Home/search/search.wxml-->
<view class='container'>
  <view class='section section-search flex-row'>
    <image src='/static/images/icon/home.png' class='search-image'></image>
    <input class='search-text'  bindconfirm="handleSearch">{{keyword?keyword:'请输入商品名称'}}</input>
    <view class='search-confirm' bindtap='handleSearch'>搜索</view>
  </view>
  <view class='section section-search-body'>
    <view class='search-section'>
      <view class='search-header'>热门关键词</view>
      <view class='search-keywords'>
        <view class='keyword-item' wx:for='{{hots}}' wx:key='{{index}}' wx:for-item='keyword' bindtap='handleSearch' data-keyword='{{keyword}}'>{{keyword}}</view>
      </view>
    </view>
    <view class='search-section'>
      <view class='search-header'>搜索历史</view>
      <view class='search-keywords'>
        <view class='keyword-item' wx:for='{{history}}' wx:key='{{index}}' wx:for-item='keyword' bindtap='handleSearch' data-keyword='{{keyword}}'>{{keyword}}</view>
      </view>
    </view>
    <view class='search-clear'>清除搜索历史</view>
  </view>
  <view class='section section-official-account'>
    <official-account></official-account>
  </view>
</view>


