/* pages/Home/index/index.wxss */
.section{
  margin-bottom: 40rpx;
}
.section-title{
  font-size: 1.4em;
  line-height: 3em;
}
/* 公众号关注 */
.section.section-official-account{
  display: block;
  position: fixed;
  bottom: 20rpx;
  left: 30rpx;
  width: 92%;
  
}
/* 分类部分 */
.section-category{
  height: 154rpx;
}
.category-item{
  width: 20%;
  text-align: center;
  font-size: 1.2em
}
.category-item-icon{
  width: 64rpx;
  height: 64rpx;
  box-shadow:  3rpx 3rpx 5rpx #000;
  border-radius: 50%;
  border: 1px solid #fff;
}
.category-item-text{
  height: 60rpx;
  line-height: 60rpx;
  color: #9e9e9e;
}
/* 最近浏览 */
.section-recent{
  overflow: hidden;
  line-height: 80rpx;
}
.product-list-recent{
  width: 100%;
  height: 248rpx;
  white-space: nowrap;

}
.product-list-recent .product-item{
  display: inline-block;
  width: 224rpx;
  height: 248rpx;
  margin-right: 10rpx;
  background: #fff;
}
.product-list-recent .product-item-container{
  height: 100%;
}
.product-list-recent .product-item-icon{
  width: 148rpx;
  height: 148rpx;
}
.product-list-recent .prodcut-item-split{
  display: block;
  width: 98%;
  height: 2rpx;
  margin: 0 auto;
  background: #e5e5e5
}
.product-list-recent .product-item-text{
  display: block;
  width: 200rpx;
  line-height: 1.5em;
  max-height: 50rpx;
  margin: 10rpx 0;
  overflow: hidden;
  word-wrap: break-word;
  word-break:break-all;

}