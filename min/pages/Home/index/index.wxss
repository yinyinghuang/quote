/* pages/Home/index/index.wxss */
.section{
  margin-bottom: 40rpx;
}
.section-title{
  font-size: 1.4em;
  line-height: 80rpx;
}
/* 公众号关注 */
.section.section-official-account{
  display: block;
  position: absolute;
  bottom: -20rpx;
  width: 92%;
  margin: auto 0;
}
/* 分类部分 */
.section-category{
  height: 154rpx;
}
.category-item{
  width: 20%;
  text-align: center;
  font-size: 1.2em
}
.category-item-icon{
  width: 64rpx;
  height: 64rpx;
  box-shadow:  3rpx 3rpx 5rpx #000;
  border-radius: 50%;
  border: 1px solid #fff;
}
.category-item-text{
  height: 80rpx;
  line-height: 80rpx;
  color: #9e9e9e;
}
/* 最近浏览 */
.section-recent{
  overflow: hidden;
  line-height: 80rpx;
}
.product-list-recent{
  width: 100%;
  height: 248rpx;
  white-space: nowrap;

}
.product-list-recent .product-item{
  display: inline-block;
  width: 224rpx;
  height: 248rpx;
  margin-right: 10rpx;
  background: #fff;
}
.product-list-recent .product-item-container{
  height: 100%;
}
.product-list-recent .product-item-icon{
  width: 148rpx;
  height: 148rpx;
}
.product-list-recent .prodcut-item-split{
  display: block;
  width: 98%;
  height: 2rpx;
  margin: 0 auto;
  background: #e5e5e5
}
.product-list-recent .product-item-text{
  display: block;
  width: 200rpx;
  line-height: 30rpx;
  max-height: 50rpx;
  margin: 10rpx 0;
  overflow: hidden;
  word-wrap: break-word;
  word-break:break-all;

}
/* 最近更新 */
.product-list-last  .product-item{
  width: 100%;
  height: 196rpx;
  margin-bottom: 15rpx;
  justify-content: flex-start;
  background: #fff;
}
.product-list-last .product-icon image{
  width: 136rpx;
  height: 136rpx;
  margin: 30rpx;
}
.product-info{
  text-align: left;
  line-height: 30rpx;
  height: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.product-info .product-item-text{
  font-size: 1.2em;
  line-height: 30rpx;
  margin-bottom: 10rpx;
  max-height: 60rpx;
  overflow: hidden
}
.product-info .product-item-price{
  color: #ff7878;
  font-weight: 600;
  line-height: 30rpx;
  margin-bottom: 14rpx;
}
.product-info .product-item-price .product-price-label{
  margin-left: 20rpx;
  color: #333;
  border: 1px solid #333;
}