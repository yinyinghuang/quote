/* pages/Home/category_filter/category_filter.wxss */
.section-filter{
  padding-top: 40rpx;
}
.section-title{
  font-size: 1.4em;
  line-height: 3em;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.filter-list{
  background: #fff;
  padding: 0 20rpx;
}
.filter-item{
  padding-top: 40rpx;
  padding-bottom: 10rpx;
  border-bottom:1px solid #e5e5e5;
  justify-content: space-between
}
.filter-item-name,
.filter-item-selected{
  font-size: 1.4em;
  line-height: 1.4em;
}
.filter-item-selected{
  font-size: 1.2em;
  color:#ff7878;
  font-weight: bold
}
.filter-item-arrow{
  padding-left: 10rpx;
}

.filter-buttons{
  width: 100%;
  position: fixed;
  left:0;
  bottom: 0;
  /* background: #fff; */
}
.filter-reset,
.filter-confirm{
  position: relative;
  width: 92%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 1.4em;
  font-weight: bold;
  text-align: center;
  background: #fff;
  margin: 16rpx 30rpx;
}

