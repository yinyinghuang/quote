.merchant-list{
  display: block;
  width: 100%;
  height: 30%;
  background: #fff;
  overflow-y:scroll;
  padding:20rpx;
  box-sizing: border-box;
}
.merchant-item{
  position: relative;
  margin-bottom: 10px;
}
.merchant-detail{
  margin-left: 70rpx;
  font-size: 1em;
  line-height: 1.8em;
}
.merchant-name{
  font-size: 1.2em;
}
.merchant-detail .merchant-address{
  color: #7f7f7f;
}
.merchant-quote{
  justify-content: flex-start;
  align-items:flex-start;

}
.merchant-quote-text{
  width: 68rpx;
}
.merchant-quote-price-item{
  font-size: 1.2em;
  color: #ff7878;
  margin-bottom:6rpx;

}
.quote-price-label{
  display: inline-block;
  color: #333;
  border: 1px solid #000;
  margin-left: 20rpx;
  padding: 0 6rpx;
}
.go-to,
.my-location{
  position: absolute;
  right: 0;
  bottom: 30%;
  width: 100rpx;
  height: 100rpx;
}
.my-location{
  left: 0
}